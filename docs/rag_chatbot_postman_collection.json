{
  "info": {
    "name": "RAG Chatbot API",
    "description": "Collection for testing the RAG Chatbot FastAPI backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    }
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        },
        "description": "Verify the health of the LLM, embedding adapter, and vector store."
      },
      "response": []
    },
    {
      "name": "Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/stats",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "stats"
          ]
        },
        "description": "Fetch vector store and embedding statistics."
      },
      "response": []
    },
    {
      "name": "Index Text",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"RAG systems combine retrieval with generation to ground answers.\",\n  \"metadata\": {\n    \"source\": \"postman-sample\",\n    \"category\": \"demo\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/index",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "index"
          ]
        },
        "description": "Index raw text into the vector store."
      },
      "response": []
    },
    {
      "name": "Index File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "<path-to-document>",
              "description": "File to upload and index."
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/index/file",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "index",
            "file"
          ]
        },
        "description": "Upload and index a document file."
      },
      "response": []
    },
    {
      "name": "Query",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"What is a RAG system?\",\n  \"top_k\": 5,\n  \"include_sources\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/query",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "query"
          ]
        },
        "description": "Submit a chat query with optional source documents."
      },
      "response": []
    },
    {
      "name": "List Documents",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/documents?limit=100&offset=0",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "documents"
          ],
          "query": [
            {
              "key": "limit",
              "value": "100"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        },
        "description": "Get list of all indexed documents with metadata. Documents persist across restarts."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}

